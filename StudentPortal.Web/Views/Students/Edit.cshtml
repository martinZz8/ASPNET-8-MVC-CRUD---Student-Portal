@{
    ViewData["Title"] = "Edit Student Page";    
}

@model StudentPortal.Web.ViewModels.EditStudentViewModel

<h1>Edit student</h1>
<form enctype="multipart/form-data" method="post">
    <div class="mt-3">
        <label class="form-label" for="Id">Id</label>
        <input type="text" class="form-control" id="Id" readonly asp-for="Id" />
    </div>
    <div class="mt-3">
        <label class="form-label" for="Name">Name</label>
        <input type="text" class="form-control" id="Name" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label" for="Email">Email</label>
        <input type="email" class="form-control" id="Email" readonly asp-for="Email" />
    </div>
    <div class="mt-3">
        <label class="form-label" for="Phone">Phone</label>
        <input type="text" class="form-control" id="Phone" asp-for="Phone" />
    </div>
    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
        <label class="form-check-label" for="Subscribed">Subscribed</label>
    </div>
    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="ChangePhotos" asp-for="ChangePhotos" />
        <label class="form-check-label" for="ChangePhotos">ChangePhotos</label>
    </div>
    <div class="mt-3">
        <label class="form-label" for="Photos">Photos</label>
        @* Added event listener that changes the belows file input "disable" property based on checkbox input with id "ChangePhotos" *@
        <input type="file" class="form-control" id="Photos" accept=".png,.jpg,.jpeg" multiple asp-for="Photos" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
    @* <div class="mt-3">
        <button type="submit" class="btn btn-danger" asp-controller="Students" asp-action="Delete">
            Delete
        </button>
    </div> *@
</form>
<asp:Content ContentPlaceHolderID="foo" runat="server">
    <script src="~/js/editStudent.js" type="text/javascript"></script>
</asp:Content>