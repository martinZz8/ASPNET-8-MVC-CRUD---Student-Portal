@{
    ViewData["Title"] = "Add Student Page";    
}

@model StudentPortal.Web.ViewModels.AddStudentViewModel

<h1>Add student</h1>
@* @using (Html.BeginForm("Add", "Students", FormMethod.Post, new { enctype = "multipart/form-data" })) *@
<form enctype="multipart/form-data" method="post">
    <div class="mt-3">
        <label class="form-label" for="Name">Name</label>
        <input type="text" class="form-control" id="Name" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label" for="Email">Email</label>
        <input type="email" class="form-control" id="Email" asp-for="Email" />
    </div>
    <div class="mt-3">
        <label class="form-label" for="Phone">Phone</label>
        <input type="text" class="form-control" id="Phone" asp-for="Phone" />
    </div>
    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Subscribed" asp-for="Subscribed" />
        <label class="form-check-label" for="Subscribed">Subscribed</label>
    </div>
    <div class="mt-3">
        <label class="form-label" for="Photos">Photos</label>
        <input type="file" class="form-control" id="Photos" accept=".png,.jpg,.jpeg" multiple asp-for="Photos" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>